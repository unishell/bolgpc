---
import Button from "../UI/Button.astro";

export interface Props {
  title?: string;
  subtitle?: string;
  backgroundImage?: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
}

const {
  title = "Welcome to Our Church",
  subtitle = "A place of worship, community, and spiritual growth",
  backgroundImage = "/uploads/hero-bg.jpg",
  ctaText = "Plan Your Visit",
  ctaLink = "/im-new",
  secondaryCtaText = "Watch Sermons",
  secondaryCtaLink = "/sermons",
} = Astro.props;
---

<section
  class="relative w-screen min-h-[110vh] overflow-hidden flex items-center justify-center"
>
  <!-- 视频背景容器（裁切层） -->
  <div class="absolute inset-0 overflow-hidden">
    <iframe
      src="https://player.vimeo.com/video/888338869?background=1&autoplay=1&loop=1&muted=1"
      frameborder="0"
      allow="autoplay; fullscreen"
      allowfullscreen
      class="absolute top-1/2 left-1/2
             min-w-full min-h-full
             w-auto h-auto
             transform -translate-x-1/2 -translate-y-1/2"
    ></iframe>
  </div>

  <!-- 可选遮罩 -->
  <div class="absolute inset-0 bg-black/60"></div>

  <!-- 内容层 -->
  <div class="relative z-10 container mx-auto px-4 text-center text-white">
    <h1 class="text-4xl md:text-6xl font-bold mb-4">{title}</h1>
    <p class="text-xl md:text-2xl mb-8">{subtitle}</p>
    <div class="flex flex-wrap justify-center gap-4">
      <Button href={ctaLink} variant="primary" size="lg">
        {ctaText}
      </Button>
      <Button
        href={secondaryCtaLink}
        variant="outline"
        size="lg"
        class="bg-white/10 text-white border-white hover:bg-white hover:text-gray-900 backdrop-blur-sm"
      >
        {secondaryCtaText}
      </Button>
    </div>
  </div>
</section>
