---
import Button from "../UI/Button.astro";

export interface Props {
  title?: string;
  subtitle?: string;
  backgroundImage?: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
}

const {
  title = "Welcome to Our Church",
  subtitle = "A place of worship, community, and spiritual growth",
  backgroundImage = "/uploads/hero-bg.jpg",
  ctaText = "Plan Your Visit",
  ctaLink = "/im-new",
  secondaryCtaText = "Watch Sermons",
  secondaryCtaLink = "/sermons",
} = Astro.props;
---

<section
  class="relative w-screen min-h-[70vh] flex items-center pt-30 overflow-hidden"
>
  <!-- 视频背景层，铺满并按比例裁切 -->
  <video
    class="absolute inset-0 w-full h-full object-cover"
    style="object-position: center 20%;"
    src="https://vimeo.com/888338869"
    autoplay
    loop
    muted
    playsinline
  ></video>

  <div
    class="absolute inset-0"
    style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3));"
  ></div>
  <div class="container relative">
    <div class="max-w-3xl text-white">
      <h1 class="text-4xl md:text-6xl font-bold mb-4 text-white">{title}</h1>
      <p class="text-xl md:text-2xl mb-8">{subtitle}</p>
      
      <div class="flex flex-wrap gap-4">
        <Button href={ctaLink} variant="primary" size="lg">
          {ctaText}
        </Button>
        
        <Button href={secondaryCtaLink} variant="outline" size="lg" class="bg-white/10 text-white border-white hover:bg-white hover:text-gray-900 backdrop-blur-sm">
          {secondaryCtaText}
        </Button>
      </div>
    </div>
  </div>
</section>