---
import Button from "../UI/Button.astro";

export interface Props {
  title?: string;
  subtitle?: string;
  backgroundImage?: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
}

const {
  title1 = "For GOD",
  title2 = "For People", 
  title3 = "Welcome to BOLGPC",
  subtitle = "A place of worship, community, and spiritual growth",
  backgroundImage = "/uploads/hero-bg.jpg",
  ctaText = "Plan Your Visit",
  ctaLink = "/im-new",
  secondaryCtaText = "Watch Sermons",
  secondaryCtaLink = "/sermons",
} = Astro.props;
---

<div x-data="revealer()" x-init=" xPercent = { start: 0, end: 0, }; yPercent = { start: 101, end: -101, }; duration = 0.4; ease = 'circ.inOut'; setTrigger($refs.hero); delay = delay + 0.1; mounted(); " x-ref="element" class="absolute inset-0 bg-neutral-700 rounded-1.5xl overflow-hidden" style="opacity: 1;"> <div x-data="animate()" x-init=" opacity.active = false; scale = { ...scale, active: true, start: 1.1, end: 1.1, ease: 'none', }; yPercent = { ...yPercent, active: true, start: -5, end: 5, ease: 'none', }; trigger = $refs.hero; scrub = 1.2; start = 'top bottom'; mounted(); "> <div x-ref="element" class="absolute inset-0 w-full h-full " style="translate: none; rotate: none; scale: none; transform: translate(0%, 0.0167%) translate3d(0px, 0px, 0px) scale(1.1, 1.1);"> <video x-data="" x-ref="video" x-init="$refs.video.play()" class="absolute inset-0 w-full h-full object-cover" playsinline="" autoplay="" muted="" loop="" oncanplay="this.muted=true" poster=""> <source src="/wp-content/uploads/2023/03/GlobalPageBroll_V2.mp4" type="video/mp4"> </video> </div> <div class="absolute inset-0 w-full h-full media-overlay"></div> </div> </div>

<section 
  class="relative  w-full aspect-video overflow-hidden pt-40 flex items-cover">
  <source src="https://player.vimeo.com/video/888338869?background=1&autoplay=1&loop=1&muted=1&autopause=0" type="video/mp4">
  <iframe
    src="https://player.vimeo.com/video/888338869?background=1&autoplay=1&loop=1&muted=1&autopause=0"
    class="absolute inset-0 w-full h-full media-overlay"
    style="object-position: center 20%;"
    frameborder="0"
    allow="autoplay; fullscreen; picture-in-picture"
   
  />

  <div class="absolute inset-0 bg-black/60"></div>

  <div class="relative container">
    <div class="max-w-3xl text-white">
      <h1 class="text-4xl md:text-6xl font-bold mb-4 text-white">{title1}</h1>
      <h1 class="text-4xl md:text-6xl font-bold mb-4 text-white">{title2}</h1>
      <h1 class="text-4xl md:text-6xl font-bold mb-4 text-white">{title3}</h1>
      <p class="text-xl md:text-2xl mb-8">{subtitle}</p>
      
      <div class="flex flex-wrap gap-4">
        <Button href={ctaLink} variant="primary" size="lg">
          {ctaText}
        </Button>
        
        <Button href={secondaryCtaLink} variant="outline" size="lg" class="bg-white/10 text-white border-white hover:bg-white hover:text-gray-900 backdrop-blur-sm">
          {secondaryCtaText}
        </Button>
      </div>
    </div>
  </div>
</section>