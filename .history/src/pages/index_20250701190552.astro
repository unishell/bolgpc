---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/Sections/HeroSection.astro";
import EventList from "../components/Sections/EventList.astro";
import SermonList from "../components/Sections/SermonList.astro";
import Button from "../components/UI/Button.astro";
---

<BaseLayout>
  <HeroSection 
    title="Welcome to Our Church"
    subtitle="A place of worship, community, and spiritual growth"
    backgroundImage="/uploads/hero-bg.webp"
    ctaText="Plan Your Visit"
    ctaLink="/im-new"
    secondaryCtaText="Watch Sermons"
    secondaryCtaLink="/sermons"
  />
  
  <!-- Service Times -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Join Us This Sunday</h2>

          <a href="https://www.youtube.com/@bolgpcofficialchannel8111" target="_blank" rel="noopener noreferrer">
           <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
             <div class="bg-gray-50 p-8 rounded-lg shadow-sm">
              <h3 class="text-xl font-bold mb-3">English Service</h3>
              <p class="text-2xl font-bold text-primary-600 mb-2">9:00 AM</p>
              <p class="text-gray-600 mb-4">Traditional service with hymns and choir</p>
              <p class="italic text-gray-500">In-person & Livestream</p>
            </div>
             <div class="bg-gray-50 p-8 rounded-lg shadow-sm">
              <h3 class="text-xl font-bold mb-3">中文崇拜</h3>
              <p class="text-2xl font-bold text-primary-600 mb-2">11:00 AM</p>
              <p class="text-gray-600 mb-4">礼拜仪式和布道</p>
              <p class="italic text-gray-500">现场 & 直播</p>
            </div>
           </div>
          </a>
        
          <a href="https://boxcast.tv/channel/rcvpdhkij4g6qfowfwsg" target="_blank" rel="noopener noreferrer">
           <div class="grid gap-8 mb-8">
             <div class="bg-gray-50 p-8 rounded-lg shadow-sm">
              <h3 class="text-xl font-bold mb-3"> BoxCast Online Streaming</h3>
              <p class="text-2xl font-bold text-primary-600 mb-2">主日 BoxCast 直播</p>
            </div>
            
           </div>
          </a> 
           <div class="bg-white p-6 rounded-lg shadow-sm flex flex-wrap justify-center gap-4 ">
          <Button href="/" variant="primary" size="lg">
            Sermons Outline
          </Button>
           <Button href="https://bolgpc.org/wp-content/uploads/2025/06/Bulletin-2025.6.29.pdf" variant="primary" size="lg">
            Bulletin
          </Button>
          </div>

            <div class="bg-white p-6 rounded-lg shadow-sm flex flex-wrap justify-center gap-4 ">
          <Button href="/sermons" variant="primary" size="lg">
            Archived Sermons
          </Button>
           <Button href="/bulletin" variant="primary" size="lg">
            Archived Bulletin
          </Button>
          </div>
        </div>
      
      </div>
    </div>
  </section>
  
  <!-- About Section -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <img 
            src="/uploads/church-default.webp" 
            alt="Our Church" 
            class="rounded-lg shadow-lg object-cover w-full h-full"
          />
        </div>
        
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">About Our Church</h2>
          <p class="text-gray-700 mb-6 text-lg">
            We believe that the Bible is the only divinely inspired, inerrant Word of God. It is the absolute standard for a believer’s life and is the only comprehensive truth, beneficial for teaching, reproof, correction, and for training in righteousness.
          </p>
          <p class="text-gray-700 mb-8 text-lg">
            We believe that there is one God, who is eternally coexistent in three (3) persons: the Father, the Son, and the Holy Spirit.
          </p>
          
          <Button href="/about-us">
            Learn More About Us
          </Button>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Events Section -->
  <EventList />
  
  <!-- Sermons Section -->
  <SermonList />
  
  <!-- Ministries Preview -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Our Ministries</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Discover how you can connect, serve, and grow through our various ministries
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="card text-center p-8">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-primary-100 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Cell Groups</h3>
          <p class="text-gray-700 mb-4">
            Our Small Groups offer dedicated communities where believers of all ages and backgrounds come together to grow spiritually, build authentic relationships, and serve one another.
          </p>
          <a href="/ministries/cell-groups" class="text-primary-600 font-medium hover:text-primary-700">
            Learn More →
          </a>
        </div>
        
        <div class="card text-center p-8">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-secondary-100 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-secondary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Chinese School</h3>
          <p class="text-gray-700 mb-4">
            Welcome to our Bread of Life Chinese School, a place to happily learn Chinese. We meet from 1:30 – 4:15 PM every Sunday. 
          </p>
          <a href="/ministries/chinese-school" class="text-primary-600 font-medium hover:text-primary-700">
            Learn More →
          </a>
        </div>
        
        <div class="card text-center p-8">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-accent-100 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">English Classes</h3>
          <p class="text-gray-700 mb-4">
            We welcome you to our English Classes offered on Tuesday, Thursday, and Friday.
          </p>
          <a href="/ministries/english-classes" class="text-primary-600 font-medium hover:text-primary-700">
            Learn More →
          </a>
        </div>
      </div>
      
      <div class="mt-12 text-center">
        <Button href="/ministries" variant="outline">
          View All Ministries
        </Button>
      </div>
    </div>
  </section>
  
  <!-- Call to Action -->
  <section 
    class="py-20 bg-cover bg-center text-white"
    style="background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(/uploads/thank-you-bg.webp)"
  >
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white">Ready to Join Our Community?</h2>
        <p class="text-xl mb-8">
          We'd love to welcome you to our church family. Come visit us this Sunday or reach out with any questions.
        </p>
        
        <div class="flex flex-wrap justify-center gap-4">
          <Button href="/im-new" variant="primary" size="lg">
            I'm New Here
          </Button>
          
          <Button href="/contact" variant="outline" size="lg" class="bg-white/10 text-white border-white hover:bg-white hover:text-gray-900 backdrop-blur-sm">
            Contact Us
          </Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>